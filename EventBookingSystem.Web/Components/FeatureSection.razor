@namespace EventBookingSystem.Web.Components

<div class="mt-16">
    <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Packed with tools and functionality.</h2>
    <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">Here are just some of the features we have to sell tickets</p>

    <div class="grid md:grid-cols-4 gap-6">
        @foreach (var feature in Features)
        {
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-xl transition-all">
                <div class="w-12 h-12 mb-4 rounded-full bg-blue-50 flex items-center justify-center">
                    <span class="text-blue-600">@feature.Icon</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">@feature.Title</h3>
                <p class="text-gray-600">@feature.Description</p>
            </div>
        }
        <div class="bg-blue-600 text-white rounded-lg shadow-md p-6 flex items-center justify-between">
            <span class="text-lg font-semibold">More</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>
</div>

@code {
    private List<FeatureItem> Features = new List<FeatureItem>
    {
        new FeatureItem { Icon = "💰", Title = "Lowest Fee", Description = "Our unbeatable low fee of 0% allows you to keep more profits." },
        new FeatureItem { Icon = "🆓", Title = "Free to Start", Description = "Our solution has no upfront costs to get started quickly." },
        new FeatureItem { Icon = "🎟️", Title = "Unlimited Tickets", Description = "Our platform lets you sell as many tickets as you want." },
        new FeatureItem { Icon = "📅", Title = "Event Calendars", Description = "Easily manage and display your event schedules." }
    };

    public class FeatureItem
    {
        public string Icon { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
    }
}
