@page "/"
@inject NavigationManager NavigationManager

<div class="tickets-candy-container">
    <!-- Background Elements -->
    <div class="background-elements">
        <div class="dot dot-orange" style="top: 145px; left: 225px;"></div>
        <div class="dot dot-green" style="top: 145px; right: 300px;"></div>
        <div class="dot dot-blue" style="top: 265px; left: 627px;"></div>
        <div class="dot dot-blue" style="top: 295px; right: 165px;"></div>
        <div class="dot dot-orange" style="bottom: 200px; right: 300px;"></div>
        <div class="dot dot-blue" style="bottom: 100px; left: 595px;"></div>
        <div class="dot dot-red" style="top: 480px; right: 650px;"></div>
        <div class="triangle" style="top: 165px; left: 650px;"></div>
        <div class="lines" style="top: 200px; right: 150px;"></div>
    </div>

    <!-- Navigation -->
    <header class="header">
        <div class="logo">
            <img src="images/ticket-icon.svg" alt="Ticket Icon" />
            <span class="logo-text">Tickets<span class="candy">Candy</span></span>
        </div>
        <nav class="navigation">
            <ul>
                <li><a href="#" class="active">Home</a></li>
                <li><a href="#">How It Works</a></li>
                <li><a href="#">Pricing</a></li>
                <li><a href="#">Support</a></li>
            </ul>
        </nav>
        <div class="auth-buttons">
            <button class="btn btn-login" @onclick="NavigateToLogin">Log In</button>
            <button class="btn btn-signup" @onclick="NavigateToSignup">Sign up</button>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="left-content">
            <div class="new-badge">
                <span class="new">NEW</span>
                <span class="new-text">Promote your event on social media</span>
            </div>

            <h1 class="main-heading">
                Sell Tickets <br />
                <span class="blue-text">Online.</span>
            </h1>

            <p class="subheading">
                Sell your online tickets easily with <br />
                best user satisfaction.
            </p>

            <div class="action-buttons">
                <button class="btn btn-get-started" @onclick="GetStarted">Get Started</button>
                <button class="btn btn-play-video" @onclick="PlayVideo">
                    <span class="play-icon">▶</span>
                    <span class="play-text">Play video</span>
                </button>
            </div>

            <div class="stats-container">
                <div class="stat-box">
                    <h2 class="stat-number">32k+</h2>
                    <p class="stat-label">Available tickets</p>
                </div>

                <div class="stat-box">
                    <h2 class="stat-number">12k+</h2>
                    <p class="stat-label">tickets sells</p>
                </div>
            </div>
        </div>

        <div class="right-content">
            <div class="hero-image-container">
                <img src="https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg" alt="Person using phone" class="hero-image" />

                <div class="profile-popup">
                    <div class="profile-image">
                        <img src="https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg" alt="Profile" />
                    </div>
                    <div class="profile-info">
                        <p class="profile-name">Katrina monte</p>
                        <p class="profile-id">014689...</p>
                    </div>
                    <div class="dropdown-icon">▼</div>
                </div>

                <div class="ticket-popup">
                    <div class="ticket-details">
                        <div class="ticket-date">
                            <div class="ticket-day">01</div>
                            <div class="ticket-label">Person</div>
                        </div>
                        <div class="ticket-date">
                            <div class="ticket-day">28</div>
                            <div class="ticket-label">June</div>
                        </div>
                    </div>
                    <div class="ticket-info">
                        <div class="ticket-label-sm">Your Ticket</div>
                        <div class="ticket-qr">
                            <img src="images/qr-code.svg" alt="QR Code" />
                        </div>
                    </div>
                </div>

                <div class="stats-popup">
                    <div class="stats-header">
                        <div class="stats-amount">
                            <span class="amount">$30,491</span>
                            <span class="increase">▲</span>
                        </div>
                        <div class="stats-percentage">
                            <span class="percentage">144%</span>
                            <span class="increase">▲</span>
                        </div>
                    </div>
                    <div class="stats-graph">
                        <img src="images/graph.svg" alt="Performance Graph" />
                    </div>
                    <div class="stats-detail">
                        <div class="stats-item">
                            <div class="stat-label-sm">DEPOSITED</div>
                            <div class="stat-value blue-text">$547,210</div>
                        </div>
                        <div class="stats-item">
                            <div class="stat-label-sm">SAVED</div>
                            <div class="stat-value blue-text">$22,426</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavigateToSignup()
    {
        NavigationManager.NavigateTo("/signup");
    }

    private void GetStarted()
    {
        NavigationManager.NavigateTo("/get-started");
    }

    private void PlayVideo()
    {
        // Implement video playing logic
    }
}